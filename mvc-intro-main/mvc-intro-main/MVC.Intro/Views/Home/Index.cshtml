@{
    ViewData["Title"] = "Home Page";
}

<div class="hero-section">
    <div class="container text-center">
        <h1 class="hero-title animate-fade-in">
            Welcome
        </h1>
        <p class="hero-subtitle animate-fade-in" style="animation-delay: 0.2s;">
            Build modern, fast, and scalable web apps with <strong>ASP.NET Core</strong>.
        </p>
        <div class="hero-actions animate-fade-in" style="animation-delay: 0.4s;">
            <a href="https://learn.microsoft.com/aspnet/core" 
               class="btn btn-primary btn-lg me-3" 
               target="_blank" 
               rel="noopener">
                Learn More
            </a>
            <a href="#features" class="btn btn-outline-light btn-lg">
                Explore Features
            </a>
        </div>
    </div>
</div>

<!-- Допълнителна секция (по желание) -->
<section id="features" class="py-5">
    <div class="container">
        <div class="row g-4">
            <div class="col-md-4">
                <div class="feature-card text-center p-4">
                    <div class="feature-icon text-primary mb-3">Fast</div>
                    <h5>Blazing Fast</h5>
                    <p class="text-muted">High performance with Kestrel and minimal overhead.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card text-center p-4">
                    <div class="feature-icon text-primary mb-3">Secure</div>
                    <h5>Secure by Default</h5>
                    <p class="text-muted">Built-in protection against XSS, CSRF, and more.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card text-center p-4">
                    <div class="feature-icon text-primary mb-3">Scalable</div>
                    <h5>Cloud Ready</h5>
                    <p class="text-muted">Deploy anywhere: Azure, AWS, Docker, or on-prem.</p>
                </div>
            </div>
        </div>
    </div>
</section>